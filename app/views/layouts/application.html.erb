<!DOCTYPE html>
<html>
<head>
  <title>AveRails</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
<%= render 'layouts/header' %>
<% flash.each do |key, value| %>
    <div id="flash" class="<%= key %>"><%= value %></div>
  <% end %>
<%= yield %>

</body>
</html>
