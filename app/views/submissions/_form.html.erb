<%= form_for @submission, :html=> { :multipart => true} do |f| %>
  <%= render "shared/error_messages", :target => @submission %>
  <p>
    <%= f.label "Collection Title" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label "Description" %><br />
    <%= f.text_field :description %>
  </p>
  <% f.hidden_field :user_id, :value => current_user.id %>
  <% f.hidden_field :project_id, :value => @project.id %>

  <%= f.fields_for :attachment do |builder| %>
    <%= render "attachment_fields", :f => builder %>
  <% end %>
  <p><%= link_to_add_fields "add another photo", f, :attachments %></p>
  <p><%= f.submit "Submit" %></p>
<% end %>